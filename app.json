{
    "id": "nl.kikkert.plex",
    "version": "1.2.1",
    "compatibility": "0.x || 1.x",
    "name": {
        "en": "Plex",
        "nl": "Plex"
    },
    "description": {
        "en": "Control a plex media server with your Homey",
        "nl": "Bestuur plex media server met je homey"
    },
    "category": "video",
    "images": {
        "large": "assets/images/large.png",
        "small": "assets/images/small.png"
    },
    "author": {
        "name": "Michiel Kikkert",
        "email": "michiel@kikkert.nl"
    },
    "contributors": {
        "developers": [
            {
                "name": "Michiel Kikkert",
                "email": "michiel@kikkert.nl"
            },
            {
                "name": "Phillip Johnsen",
                "email": "phillip@lightweight.no"
            },
            {
                "name": "Greg Laabs",
                "email": "OverloadUT@gmail.com"
            }
        ]
    },
    "dependencies": {
        "q": "^1.2.0",
        "plex-api": "^3.2.0",
        "plex-api-credentials": "^2.0.0",
        "lunr": "^0.5.12"
    },
    "permissions": [
        "homey:manager:speech-output",
        "homey:manager:speech-input",
        "homey:manager:ledring"
    ],
    "drivers": [
        {
            "id": "pht",
            "name": {
                "en": "Plex Home Theater",
                "nl": "Plex Home Theater"
            },
            "images": {
                "large": "drivers/pht/assets/large.png",
                "small": "drivers/pht/assets/small.png"
            },
            "class": "plexplayer",
            "capabilities": [ ],
            "pair": [
                {
                  "id": "configure_players",
                  "template" : "list_devices",
                  "navigation": {
                        "next": "add_players"
                    }
                },
                
                {
                  "id": "add_players",
                  "template": "add_devices"
                }
            ]
        },
        {
            "id": "pmp",
            "name": {
                "en": "Plex Media Player",
                "nl": "Plex Media Player"
            },
            "images": {
                "large": "drivers/pmp/assets/large.png",
                "small": "drivers/pmp/assets/small.png"
            },
            "class": "plexplayer",
            "capabilities": [ ],
            "pair": [
                {
                  "id": "configure_players",
                  "template" : "list_devices",
                  "navigation": {
                        "next": "add_players"
                    }
                },
                
                {
                  "id": "add_players",
                  "template": "add_devices"
                }
            ]
        },
        {
            "id": "chromecast",
            "name": {
                "en": "ChromeCast",
                "nl": "ChromeCast"
            },
            "images": {
                "large": "drivers/chromecast/assets/large.jpg",
                "small": "drivers/chromecast/assets/small.jpg"
            },
            "class": "plexplayer",
            "capabilities": [ ],
            "pair": [
                {
                  "id": "configure_players",
                  "template" : "list_devices",
                  "navigation": {
                        "next": "add_players"
                    }
                },
                
                {
                  "id": "add_players",
                  "template": "add_devices"
                }
            ]
        }
    ],
    "flow": {
        "triggers": [
            {
                "id" : "media_playing",
                "title": { 
                    "en": "Plex starts playing"
                }
            },
            {
               "id" : "media_stopped",
                "title": { 
                    "en": "Plex stops playing"
                }
            },
            {
               "id" : "media_paused",
                "title": { 
                    "en": "Plex pauses"
                } 
            }

        ],
        "actions": [
            {
                "id": "playitemchrome",
                "title": {
                    "en": "Play Plex Media",
                    "nl": "Speel Plex Media"
                },
                "fluidArgs": true,
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:nl.kikkert.plex&driver_id=chromecast"
                    },
                    {
                        "name": "selected",
                        "type": "autocomplete",
                        "placeholder": {
                            "en": "Find a media item"
                        }
                    }
                ]
            },
            {
                "id": "stopplayingchrome",
                "title": {
                    "en": "Stop Plex",
                    "nl": "Stop Plex"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:nl.kikkert.plex&driver_id=chromecast"
                    }
                ]
            },
            {
                "id": "pausechrome",
                "title": {
                    "en": "Pause Plex",
                    "nl": "Pauzeer Plex"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:nl.kikkert.plex&driver_id=chromecast"
                    }
                ]
            },
            {
                "id": "continuechrome",
                "title": {
                    "en": "Continue Plex",
                    "nl": "Continueer Plex"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:nl.kikkert.plex&driver_id=chromecast"
                    }
                ]
            },
            {
                "id": "playitempht",
                "title": {
                    "en": "Play Plex Media",
                    "nl": "Speel Plex Media"
                },
                "fluidArgs": true,
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:nl.kikkert.plex&driver_id=pht"
                    },
                    {
                        "name": "selected",
                        "type": "autocomplete",
                        "placeholder": {
                            "en": "Find a media item"
                        }
                    }
                ]
            },
            {
                "id": "stopplayingpht",
                "title": {
                    "en": "Stop Plex",
                    "nl": "Stop Plex"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:nl.kikkert.plex&driver_id=pht"
                    }
                ]
            },
            {
                "id": "pausepht",
                "title": {
                    "en": "Pause Plex",
                    "nl": "Pauzeer Plex"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:nl.kikkert.plex&driver_id=pht"
                    }
                ]
            },
            {
                "id": "continuepht",
                "title": {
                    "en": "Continue Plex",
                    "nl": "Continueer Plex"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:nl.kikkert.plex&driver_id=pht"
                    }
                ]
            },
            {
                "id": "playitempmp",
                "title": {
                    "en": "Play Plex Media",
                    "nl": "Speel Plex Media"
                },
                "fluidArgs": true,
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:nl.kikkert.plex&driver_id=pmp"
                    },
                    {
                        "name": "selected",
                        "type": "autocomplete",
                        "placeholder": {
                            "en": "Find a media item"
                        }
                    }
                ]
            },
            {
                "id": "stopplayingpmp",
                "title": {
                    "en": "Stop Plex",
                    "nl": "Stop Plex"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:nl.kikkert.plex&driver_id=pmp"
                    }
                ]
            },
            {
                "id": "pausepmp",
                "title": {
                    "en": "Pause Plex",
                    "nl": "Pauzeer Plex"
                },
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:nl.kikkert.plex&driver_id=pmp"
                    }
                ]
            },
            {
                "id": "continuepmp",
                "title": {
                    "en": "Continue Plex",
